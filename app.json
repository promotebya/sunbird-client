{
  "expo": {
    "name": "LovePoints",
    "slug": "LovePointsApp",
    "scheme": "lovepoints",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",

    "icon": "./assets/icon.png",

    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },

    "assetBundlePatterns": ["**/*"],

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.promotebya.LovePointsApp",
      "buildNumber": "1.0.2",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "We need access to your photos to add memories.",
        "NSCameraUsageDescription": "We use your camera to capture memory photos and scan QR codes.",
        "NSMicrophoneUsageDescription": "We use the microphone for video capture.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },

    "android": {
      "package": "com.promotebya.lovepoints",
      "versionCode": 3,
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.POST_NOTIFICATIONS"
      ]
    },

    "notification": { "icon": "./assets/icon.png", "color": "#FF4F8B" },

    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow LovePoints to access your photos to add memories.",
          "cameraPermission": "Allow LovePoints to use the camera for memory photos.",
          "microphonePermission": "Allow LovePoints to use the microphone for video capture."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow LovePoints to use the camera to scan QR codes and take photos."
        }
      ],
      "expo-notifications"
    ],

    "extra": { "eas": { "projectId": "d791c6d2-2f30-4b8e-b5b6-0f52eb421bf3" } },

    "runtimeVersion": { "policy": "appVersion" },
    "jsEngine": "hermes",
    "updates": {
      "url": "https://u.expo.dev/d791c6d2-2f30-4b8e-b5b6-0f52eb421bf3",
      "fallbackToCacheTimeout": 0,
      "checkAutomatically": "ON_ERROR_RECOVERY"
    }
  }
}